package qualification;

import java.util.Scanner;

/**
 *
 * @author bhavya
 */
public class Qualification {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Check c = new Check();
        c.display();
    }
    
}
class Check{ 
    void display()
    {
        Scanner sc = new Scanner(System.in);
        System.out.println("enter the qualification in this formate only 'btech'");
        String ch = sc.next();
        switch(ch)
        {
            case "btech":
            {
               System.out.println("btech's are allowed"); 
               break;
            }
            case "mtech" :
            {
                System.out.println("mtech's are allowed"); 
               break;
            }
            case "mca" :
            {
                System.out.println("mca's are allowed"); 
               break;
            }
            case "bcom" :
            {
                System.out.println("bcom's are allowed"); 
               break;
            }
            default :
            {
                System.out.println("invalid input"); 
            }
       }
    }
}
        
    
